#add additional srupal installs and vhosts.

apache_vhosts:
  - servername: "test2.dev"
    serveralias: "www.test2.dev"
    documentroot: "/sites/test2"
    extra_parameters: |
          ProxyPassMatch ^/(.*\.php(/.*)?)$ "fcgi://127.0.0.1:9000/test2"

