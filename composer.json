{
    "name": "jacksonriver/springboard_vm",
    "description": "Springboard with Composer + DrupalVM + Codeception.",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "jacksonriver/springboard-composer",
                "version": "dev-develop",
                "source": {
                    "url": "https://github.com/JacksonRiver/springboard-composer.git",
                    "type": "git",
                    "reference": "develop"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "jacksonriver/acceptance-tests",
                "version": "master",
                "source": {
                    "url": "https://github.com/JacksonRiver/acceptance-tests.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "composer/installers": "^1.0.20",
        "mnsami/composer-custom-directory-installer": "1.1.*",
        "jacksonriver/springboard-composer": "dev-develop",
        "jacksonriver/acceptance-tests": "dev-master"
    },
    "require-dev": {
        "geerlingguy/drupal-vm": "4.6",
        "composer/installers": "~1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
    },
    "config": {
      "preferred-install": "source"
    },
    "extra": {
        "installer-paths": {
            "springboard-composer": ["jacksonriver/springboard-composer"],
            "acceptance-tests": ["jacksonriver/acceptance-tests"]
        }
    },
    "scripts": {
        "post-update-cmd": [
            "scripts/make-sb.sh",
            "scripts/install-codeception.sh"
        ]
    }
}
