{
    "name": "jacksonriver/druvmoser",
    "description": "Springboard with Composer + Drush Make + DrupalVM + Codeception.",
    "type": "project",
    "license": "MIT",
    "repositories": [

        {
            "type": "package",
            "package": {
                "name": "jacksonriver/springboard-build",
                "version": "4.14",
                "source": {
                    "url": "https://github.com/JacksonRiver/springboard-build.git",
                    "type": "git",
                    "reference": "7.x-4.x_add_developer_make_file"
                },
                "dist": {
                    "url": "https://github.com/JacksonRiver/springboard-build/archive/7.x-4.14.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "jacksonriver/acceptance-tests",
                "version": "4.14",
                "source": {
                    "url": "https://github.com/JacksonRiver/acceptance-tests.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "composer/installers": "^1.0.20",
        "mnsami/composer-custom-directory-installer": "1.1.*",
        "jacksonriver/springboard-build": "4.14",
        "jacksonriver/acceptance-tests": "4.14"
    },
    "require-dev": {
        "geerlingguy/drupal-vm": "^3.5",
        "composer/installers": "~1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "config": {
      "preferred-install": "source"
    },
    "extra": {
        "installer-paths": {
          "build": ["jacksonriver/springboard-build"],
          "acceptance-tests": ["jacksonriver/acceptance-tests"]
        }
    },
    "scripts": {
        "post-update-cmd": [
            "scripts/make-sb.sh"
        ]
    }
}
